.tabs{
  width: 750rpx;
  height: 88rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.tab{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  height: 100%;
  display: flex;
  align-items: center;
}
.active{
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  border-bottom: 8rpx solid orange;
}
.tab-content{
  padding-left: 32rpx;
  height: 500rpx;
}
.tab-item{
  height: 99rpx;
  border-bottom: 1px solid #EEEEEE;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-right: 32rpx;
}
.tab-item-left{
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
}
.radioGroup{
  display: flex;
  justify-content: space-around;
  width: 462rpx;
}
.imgRadio{
  width: 36rpx;
  height: 36rpx;
}
.radio-text{
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}
.tab-item-right{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.tab-item-input{
  color: #333333;
  text-align: right;
  font-size: 30rpx;
  display: block;
}
.tab-item-right-text{
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}
.goImg{
  width: 44rpx;
  height: 44rpx;
}